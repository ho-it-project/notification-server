{
  "name": "hoit-notification-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:api": "tsc -p tsconfig.api.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "publish": "cd packages/api/lib && npm publish",
    "docker:build": "docker build -t hoit/notification-server .",
    "docker:start": "docker run -p 8000:8000 hoit/notification-server:latest",
    "docker:stop": "docker stop $(docker ps -a -q)",
    "docker:build:test": "docker build -t hoit/notification-server:test -f ./dockerfile.test .",
    "docker:test": "docker run -p 8000:8000 hoit/notification-server:test pnpm run test",
    "docker:test:e2e": "docker run -p 8000:8000 hoit/notification-server:test pnpm run test:e2e",
    "docker:build:dev": "docker build -t hoit/notification-server:dev -f ./dockerfile.dev .",
    "docker:dev": "docker run -p 8000:8000 hoit/notification-server:dev",
    "decker:build:local": "docker build -t hoit/notification-server:local -f ./dockerfile.local .",
    "decker:local": "docker run -p 8000:8000 hoit/notification-server:local",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:pull": "npx prisma db pull",
    "prepare": "husky install"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "@nestia/core": "^1.6.3",
    "@nestia/fetcher": "^1.6.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.2.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.2.4",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/websockets": "^10.2.4",
    "@prisma/client": "5.3.1",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "nest-winston": "^1.9.4",
    "prisma": "^5.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2",
    "typescript-transform-paths": "^3.4.6",
    "typia": "^4.2.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestia/e2e": "^0.3.6",
    "@nestia/sdk": "^1.6.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "nestia": "^4.4.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.0.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
