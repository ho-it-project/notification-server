{
  "name": "hoit-notification-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:api": "tsc -p tsconfig.api.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/e2e/jest-e2e.json --detectOpenHandles",
    "publish": "cd packages/api/lib && npm publish",
    "docker:build": "docker build -t hoit/notification-server .",
    "docker:start": "docker run -p 8000:8000 hoit/notification-server:latest",
    "docker:stop": "docker stop $(docker ps -a -q)",
    "docker:build:test": "docker build -t hoit/notification-server:test -f ./dockerfile.test .",
    "docker:test": "docker run -p 8000:8000 hoit/notification-server:test pnpm run test",
    "docker:test:e2e": "docker run -p 8000:8000 hoit/notification-server:test pnpm run test:e2e",
    "docker:build:dev": "docker build -t hoit/notification-server:dev -f ./dockerfile.dev .",
    "docker:dev": "docker run -p 8000:8000 hoit/notification-server:dev",
    "decker:build:local": "docker build -t hoit/notification-server:local -f ./dockerfile.local .",
    "decker:local": "docker run -p 8000:8000 hoit/notification-server:local",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:pull": "npx prisma db pull",
    "prepare": "husky install"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "@nestia/core": "^2.1.8",
    "@nestia/fetcher": "^2.1.8",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/platform-socket.io": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/websockets": "^10.2.7",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@prisma/client": "5.3.1",
    "@socket.io/redis-adapter": "^8.2.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "kafkajs": "^2.2.4",
    "nest-winston": "^1.9.4",
    "pnpm": "^8.8.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2",
    "socket.io-redis": "^6.1.1",
    "typescript-transform-paths": "^3.4.6",
    "typia": "^5.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@nestia/e2e": "^0.3.6",
    "@nestia/sdk": "^2.1.8",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/cookie-parser": "^1.4.4",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/express": "^4.17.18",
    "@types/express-session": "^1.17.8",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@types/supertest": "^2.0.14",
    "@types/uuid": "^9.0.5",
    "@types/bcrypt": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nestia": "^4.5.0",
    "npm": "^10.2.0",
    "prettier": "^3.0.3",
    "prisma": "^5.4.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.0.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.ts": "exlint --fix"
  }
}
